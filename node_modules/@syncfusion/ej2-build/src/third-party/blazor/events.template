@using Newtonsoft.Json;
@using System.ComponentModel;
@using Syncfusion.Blazor;
@using System.Collections.Generic;
@using Microsoft.AspNetCore.Components;
{{GenericType}}
@inherits BaseComponent

<CascadingValue Value="@this">

</CascadingValue>

@code {
    [CascadingParameter]
    protected override BaseComponent mainParent { get; set; }

    {{EventProperties}}
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        if (this.DelegateList.Count() > 0)
        {
            foreach (var eventList in this.DelegateList)
            {
                EventData data = this.DelegateList[eventList.Key];
                this.mainParent.InvokeGenericMethod("SetEvent", data.ArgumentType, this.mainParent.GetType(), eventList.Key, data.Handler);
            }
        }
    }
}